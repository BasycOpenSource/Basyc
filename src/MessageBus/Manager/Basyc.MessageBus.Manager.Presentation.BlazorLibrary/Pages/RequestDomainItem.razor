@{
    int commandCount = @DomainItemViewModel.RequestItemViewModels.Where(x => x.RequestInfo.RequestType == Application.MessageType.Command).Count();
    int queryCount = @DomainItemViewModel.RequestItemViewModels.Where(x => x.RequestInfo.RequestType == Application.MessageType.Query).Count();
    int genericCount = @DomainItemViewModel.RequestItemViewModels.Where(x => x.RequestInfo.RequestType == Application.MessageType.Generic).Count();
}
<MudExpansionPanel @bind-IsExpanded="isExpanded" Class="m-0" IsInitiallyExpanded="true" Dense="true" DisableGutters="true" HideIcon="true">
    <TitleContent>
        <domainHeading>
            <domainHeadingText>
                @DomainItemViewModel.RequestDomainInfo.DomainName
            </domainHeadingText>
            @if (queryCount > 0)
            {
                <queriesCount>
                    @queryCount
                    @if (queryCount < 2)
                    {
                        @: query
                    }
                    else
                    {
                        @: queries
                    }
                </queriesCount>
            }
            @if (commandCount > 0)
            {
                @if (queryCount > 0)
                {<MudDivider Vertical="true" FlexItem="true" />}
                <commandCount>
                    @commandCount
                    @if (commandCount < 2)
                    {
                        @: command
                    }
                    else
                    {
                        @: commands
                    }
                </commandCount>
            }

            @if (genericCount > 0)
            {
                @if (commandCount > 0)
                {<MudDivider Vertical="true" FlexItem="true" />}
                <genericCount>
                    @genericCount
                    @if (genericCount < 2)
                    {
                        @: message
                    }
                    else
                    {
                        @: messages
                    }
                </genericCount>
            }
        </domainHeading>

        @if (isExpanded is false)
        {
            <headingDivider />
        }
    </TitleContent>
    <ChildContent>
        <MudExpansionPanels DisableBorders="true" Elevation="0" MultiExpansion="true" Class="pl-8 pb-8 pr-8">
            @foreach (var message in DomainItemViewModel.RequestItemViewModels)
            {
                @*<RequestItem OnMessageSending="@(async (s,a)=>await OnMessageSending.InvokeAsync(s as RequestItem))" RequestItemViewModel="message" />*@
                <RequestItem OnMessageSending="@(async (sender)=>await OnMessageSending.InvokeAsync((RequestItem)sender))" RequestItemViewModel="message" />
            }
        </MudExpansionPanels>
    </ChildContent>
</MudExpansionPanel>
@code{
    private bool isExpanded;
}