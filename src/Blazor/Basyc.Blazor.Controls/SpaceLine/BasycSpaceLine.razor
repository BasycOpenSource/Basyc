@namespace Basyc.Blazor.Controls
@using BlazorComponentUtilities;

<basycSpaceLine class="@classToRender">
    @if(Visible)
    {
        <line/>
    }
</basycSpaceLine>
@code {
    [Parameter] public bool Visible { get; set; } = true;
    [Parameter] public SpaceLineSize? Start { get; set; }
    [Parameter] public SpaceLineSize? End { get; set; }

    private string classToRender = "";
    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        classToRender = new CssBuilder()
            .AddClass("separator-top--small", Start == SpaceLineSize.Small)
            .AddClass("separator-top--medium", Start == SpaceLineSize.Medium)
            .AddClass("separator-top--big", Start == SpaceLineSize.Big)
            .AddClass("separator-end--small", End == SpaceLineSize.Small)
            .AddClass("separator-end--medium", End == SpaceLineSize.Medium)
            .AddClass("separator-end--big", End == SpaceLineSize.Big)
            .Build();
    }
}
